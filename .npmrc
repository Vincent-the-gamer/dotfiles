# For pnpm.
# true: dependencies will be installed in node_modules root path.
# false: dependencies will be installed in node_modules/.pnpm and add links in node_modules.
# default: false.
shamefully-hoist=true

# For pnpm.
# If you don't want pnpm to fail on peer dependency issues, add "strict-peer-dependencies=false" to an .npmrc file at the root of your project.
strict-peer-dependencies=false